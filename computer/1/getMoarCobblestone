move.right()
move.forward()
move.down()
move.turnAround()

local facingRight = false
while not cobble.hasEnough() do
  if facingRight then
    turtle.turnLeft()
  else
    turtle.turnRight()
  end
  
  facingRight = not facingRight
  
  while not turtle.detect() do
    sleep(0.1)
  end
  
  turtle.dig()
  cobble.onGet()
end

if facingRight then
  turtle.turnRight()
else
  move.turnAround()
end

move.up()
move.back()
move.left()
